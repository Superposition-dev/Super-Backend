<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.superposition.productexhibition.mapper.ProductExhibitionMapper">

    <select id="getProductIdsByExhibitionId" parameterType="long" resultType="long">
        SELECT pe.product_id
        FROM product_exhibition pe
        WHERE pe.exhibition_id = #{exhibition_id}
        ORDER BY pe.product_id;
    </select>
</mapper>